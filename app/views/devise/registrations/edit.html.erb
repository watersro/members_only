<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-3 has-text-centered">Edit your details</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
            <div class="field">
              <div class="control">
                <%= f.input :email, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <div class="control">
                <%= f.input :password, input_html: { class:"input" }, wrapper: false, 
                  label_html: { class:"label" }, 
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password_confirmation, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>		
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :current_password, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control has-text-centered">
                <%= f.button :submit, "Update" %>
                <%= link_to "Back", :back %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class="control">
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
</div>
